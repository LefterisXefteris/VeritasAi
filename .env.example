# VeritasAI Configuration
# Copy this file to .env and fill in your actual values

# Notion Integration
NOTION_DATABASE_ID=your-notion-database-id-here
NOTION_TOKEN=your-notion-integration-token-here

# Security Gateway Settings
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
DEBUG=false

# Approval Settings
DEFAULT_APPROVAL_TIMEOUT=3600  # 1 hour in seconds
APPROVAL_POLL_INTERVAL=30      # 30 seconds
CLEANUP_INTERVAL_HOURS=24      # Clean up old requests after 24 hours

# Risk Thresholds (true = requires approval, false = auto-approve)
RISK_THRESHOLD_LOW=false
RISK_THRESHOLD_MEDIUM=false
RISK_THRESHOLD_HIGH=true
RISK_THRESHOLD_CRITICAL=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=veritasai.log